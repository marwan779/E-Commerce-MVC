@model ProductVM

@{
	ViewData["Title"] = "Create Product";
}

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient mt-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2" > @(Model.Product.Id != 0?  "Update": "Create") Product</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4 row">

			<form method="post" enctype="multipart/form-data">
				<input asp-for="Product.Id" hidden />
				<input asp-for="Product.ImageUrl" hidden/>
				<div class="row">
					<div class="col-10">

					<div class="border p-3">

						<div class="col-12 form-floating py-12 pb-3">
							<input asp-for="Product.Title" class="form-control border-0 shadow" />
							<label asp-for="Product.Title" class="ms-2"></label>
							<span asp-validation-for="Product.Title" class="text-danger mt-1"></span>
						</div>

						<div class="col-12 py-12 pb-3">
							<label asp-for="Product.Description" class="ms-2 text-muted"></label>
							<textarea asp-for="Product.Description" class="form-control border-0 shadow"></textarea>
						</div>

						<div class="col-12 form-floating py-12 pb-3">
							<input asp-for="Product.ISBN" class="form-control border-0 shadow" />
							<label asp-for="Product.ISBN" class="ms-2"></label>
							<span asp-validation-for="Product.ISBN" class="text-danger mt-1"></span>
						</div>

						<div class="col-12 form-floating py-12 pb-3">
							<input asp-for="Product.Author" class="form-control border-0 shadow" />
							<label asp-for="Product.Author" class="ms-2"></label>
							<span asp-validation-for="Product.Author" class="text-danger mt-1"></span>
						</div>

						<div class="col-12 form-floating py-12 pb-3">
							<input asp-for="Product.ListPrice" class="form-control border-0 shadow" />
							<label asp-for="Product.ListPrice" class="ms-2"></label>
							<span asp-validation-for="Product.ListPrice" class="text-danger mt-1"></span>
						</div>

						<div class="col-12 form-floating py-12 pb-3">
							<input asp-for="Product.Price" class="form-control border-0 shadow" />
							<label asp-for="Product.Price" class="ms-2"></label>
							<span asp-validation-for="Product.Price" class="text-danger mt-1"></span>
						</div>

						<div class="col-12 form-floating py-12 pb-3">
							<input asp-for="Product.Price50" class="form-control border-0 shadow" />
							<label asp-for="Product.Price50" class="ms-2"></label>
							<span asp-validation-for="Product.Price50" class="text-danger mt-1"></span>
						</div>

						<div class="col-12 form-floating py-12 pb-3">
							<input asp-for="Product.Price100" class="form-control border-0 shadow" />
							<label asp-for="Product.Price100" class="ms-2"></label>
							<span asp-validation-for="Product.Price100" class="text-danger mt-1"></span>
						</div>

						<div class="col-12 form-floating py-12 pb-3">
							<input type="file" name="Image" class="form-control border-0 shadow" />
							<label asp-for="Product.ImageUrl" class="ms-2"></label>
						</div>

						<div class="col-12 form-floating py-12 pb-3">
							<select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-select border-0 shadow">
								<option disabled selected>-- Select Category --</option>
							</select>
							<label asp-for="Product.Category" class="ms-2"></label>
							<span asp-validation-for="Product.CategoryId" class="text-danger mt-1"></span>
						</div>

						<div class="row pt-2 pb-5">
							<div class="col-6 col-md-3">
								@if (Model.Product.Id == 0)
								{
									<button type="submit" class="btn btn-primary form-control">Create</button>
									// Create
								}
								else
								{
									<button type="submit" class="btn btn-primary form-control">Update</button>
									// Update
								}

							</div>
							<div class="col-6 col-md-3">
								<a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border form-control">Go To List</a>
							</div>
						</div>
					</div>

					</div>
					<div class="col-2">
						<img src="@Model.Product.ImageUrl" width="100%"
						style="border-radius: 5px; border: 1px solid #bbb9b9"/>
					</div>
				</div>
				
			</form>

	</div>
</div>



